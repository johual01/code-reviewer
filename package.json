{
  "name": "code-reviewer",
  "displayName": "Code Reviewer",
  "description": "Una extensión para revisar código JavaScript y TypeScript.",
  "version": "1.0.0",
  "icon": "icon.png",
  "publisher": "JesusPereira",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johual01/code-reviewer.git"
  },
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-reviewer.review",
        "title": "Revisar Código"
      },
      {
        "command": "code-reviewer.resolveDiagnostic",
        "title": "Resolver Diagnóstico"
      },
      {
        "command": "code-reviewer.config",
        "title": "Configurar Code Reviewer"
      },
      {
        "command": "code-reviewer.clearAuth",
        "title": "Limpiar Sesión de Autenticación"
      },
      {
        "command": "code-reviewer.generateDetailedSuggestions",
        "title": "Generar Sugerencias Detalladas",
        "icon": "$(book)"
      }
    ],
    "configuration": {
      "title": "Code Reviewer",
      "properties": {
        "codeReviewer.autoGenerateDetailedSuggestions": {
          "type": "boolean",
          "default": false,
          "description": "Generar automáticamente sugerencias detalladas después del análisis"
        }
      }
    }
  },
  "scripts": {
    "test": "node ./test/extension.test.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "package-with-host": "HOST={$1} vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "form-data": "^4.0.0",
    "showdown": "^2.1.0"
  }
}
